FROM python:3.11-slim

WORKDIR /app

COPY panel/backend/pyproject.toml /app/pyproject.toml

RUN pip install --no-cache-dir -U pip \
  && pip install --no-cache-dir fastapi uvicorn[standard] pydantic pydantic-settings sqlalchemy asyncpg alembic httpx pyjwt[crypto] cryptography passlib[argon2] python-multipart jinja2

COPY panel/backend /app

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
